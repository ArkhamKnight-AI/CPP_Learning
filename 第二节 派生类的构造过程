#include<iostream>
using namespace std;

/*
继承的本质和原理
继承的本质：1.代码复用 2.
*/

class Base {
public:
	Base(int data) : ma(data) { cout << "Base()" << endl; }
	~Base() { cout << "~Base()" << endl; }
protected:
	int ma;
};

class Derive : public Base
{
public:
	//派生类不可以直接初始化从基类继承的成员 ma(data) 
	Derive(int data)
		:Base(data), mb(data) 
	{
		cout << "Derive()" << endl;
	}

	~Derive() {
		cout << "~Derive()" << endl;
	}

private:
	int mb;
};

int main() {
	Derive d(20);

	return 0; 
}
